<Window
    x:Class="NitroShell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroShell"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NitroShell">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Background="#0D0D0D">
        <Grid.Resources>
            <Style x:Key="BorderlessTextBoxStyle" TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <ScrollViewer x:Name="ContentElement"
                                          Padding="{TemplateBinding Padding}"
                                          Background="{TemplateBinding Background}"
                                          Foreground="{TemplateBinding Foreground}"
                                          BorderThickness="0"
                                          FocusVisualPrimaryBrush="Transparent"
                                          FocusVisualSecondaryBrush="Transparent"
                                          FocusVisualMargin="0"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Padding="16"
                      Background="#0D0D0D">
            <TextBlock x:Name="OutputBox"
                       Foreground="#FC4850"
                       FontFamily="Consolas"
                       FontSize="15"
                       LineHeight="20"
                       TextWrapping="Wrap"/>
        </ScrollViewer>

        <Border Grid.Row="1"
                Background="#1A1A1A"
                BorderThickness="1"
                BorderBrush="#2E2E2E"
                CornerRadius="8"
                Margin="12"
                Padding="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text=">>>"
                           Foreground="#FC4850"
                           FontFamily="Consolas"
                           FontSize="18"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>

                <TextBox x:Name="InputBox"
                         Grid.Column="1"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#FC4850"
                         FontFamily="Consolas"
                         FontSize="20"
                         VerticalAlignment="Center"
                         KeyDown="InputBox_KeyDown"
                         AcceptsReturn="False"
                         SelectionHighlightColor="#FC4850" 
                         Style="{StaticResource BorderlessTextBoxStyle}"/>
            </Grid>
        </Border>

    </Grid>
</Window>
